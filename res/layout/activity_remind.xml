<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clock_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RemindActivity" >

    <Button
        android:id="@+id/InsertRemindButton"
        android:layout_width="125dp"
        android:layout_height="112dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/record_btn" />

    <ListView
        android:id="@+id/RemindListView"
        android:layout_width="650dp"
        android:layout_height="880dp"
        android:layout_below="@+id/InsertRemindButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp" >
    </ListView>

</RelativeLayout>
